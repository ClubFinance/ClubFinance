{% extends 'base.html.twig' %}

{% block pagetitle %}Bilanz{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Bilanz per {{ stichtag.datum|date("d.m.Y") }} (abgerufen am {{ "now"|date("d.m.Y") }})</h6>
    </div>
    <div class="card-body">
        <p>
            <a href="{{ path('bilanz_export_pdf') }}" target="_blank" class="btn btn-success btn-icon-split mb-3 mr-2 float-right">
                <span class="icon text-white-50">
                    <i class="fas fa-file-pdf"></i>
                </span>
                <span class="text">PDF</span>
            </a>
        </p>
        <div class="row" style="margin-top: 4rem!important;">
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th colspan="2">Umlaufvermögen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for key, value in umlaufvermoegen %}
                                    {% if key == 'sum' %}
                                        <tr>
                                            <th>Summe</th>
                                            <th>{{ value }}</th>
                                        </tr>
                                    {% elseif value == 0  %}
                                    {% else %}
                                        <tr>
                                            <td>{{ key }}</td>
                                            <td>{{ value }}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th colspan="2">Fremdkapital</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for key, value in fremdkapital %}
                                    {% if key == 'sum' %}
                                        <tr>
                                            <th>Summe</th>
                                            <th>{{ value }}</th>
                                        </tr>
                                    {% elseif value == 0  %}
                                    {% else %}
                                        <tr>
                                            <td>{{ key }}</td>
                                            <td>{{ value }}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th colspan="2">Anlagevermögen</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for key, value in anlagevermoegen %}
                                    {% if key == 'sum' %}
                                        <tr>
                                            <th>Summe</th>
                                            <th>{{ value }}</th>
                                        </tr>
                                    {% elseif value == 0  %}
                                    {% else %}
                                        <tr>
                                            <td>{{ key }}</td>
                                            <td>{{ value }}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th colspan="2">Eigenkapital</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for key, value in eigenkapital %}
                                    {% if key == 'sum' %}
                                        <tr>
                                            <th>Summe</th>
                                            <th>{{ value }}</th>
                                        </tr>
                                    {% elseif (key == "Gewinn") or (key == "Verlust")  %}
                                        <tr>
                                            <td class="text-{{ abschlussColor }}">{{ key }}</td>
                                            <td class="text-{{ abschlussColor }}">{{ value }}</td>
                                        </tr>
                                    {% elseif value == 0  %}
                                    {% else %}
                                        <tr>
                                            <td>{{ key }}</td>
                                            <td>{{ value }}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th>Aktiven</th>
                                    <th>{{ aktiven }}</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th>Passiven</th>
                                    <th>{{ passiven }}</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}