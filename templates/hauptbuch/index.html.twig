{% extends 'base.html.twig' %}

{% block pagetitle %}Hauptbuch{% endblock %}

{% block body %}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Hauptbuch</h6>
    </div>
    <div class="card-body">
        <a href="{{ path('hauptbuch_new') }}" class="btn btn-info btn-icon-split mb-3">
            <span class="icon text-white-50">
                <i class="fas fa-plus"></i>
            </span>
            <span class="text">Neuer Buchungssatz</span>
        </a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Datum</th>
                    <th scope="col">SOLL</th>
                    <th scope="col">HABEN</th>
                    <th scope="col">Betrag</th>
                    <th scope="col">Beschreibung</th>
                    <th scope="col">Beleg(e)</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for satz in hauptbuch %}
                    <tr>
                         <td>{{ satz.id }}</td>
                         <td>{{ satz.datum|date('d.m.Y') }}</td>
                         <td>{{ satz.soll }}</td>
                         <td>{{ satz.haben }}</td>
                         <td>CHF {{ (satz.betrag)/100 }}</td>
                         <td>{{ satz.beschreibung }}</td>
                         <td>{{ satz.beleg }}</td>
                        <td align="right">
                            <a href="hauptbuch/edit/{{ satz.id }}" class="btn btn-primary btn-circle btn-sm mr-2" data-toggle="tooltip" data-placement="top" title="Bearbeiten"><i class="fas fa-edit"></i></a>
                            <a href="javascript:delete_ajax('hauptbuch/delete/', '{{ satz.id }}', '{{ satz.soll }}/{{ satz.haben }} - {{ satz.beschreibung }}')" class="btn btn-danger btn-circle btn-sm" data-toggle="tooltip" data-placement="top" title="LÃ¶schen"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}